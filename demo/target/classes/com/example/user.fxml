<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.main.UserController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="User  Management System" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <!-- TableView -->
    <TableView fx:id="userTable" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colFirstName" text="First Name" prefWidth="120"/>
            <TableColumn fx:id="colLastName" text="Last Name" prefWidth="120"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Add User" fx:id="btnAdd" onAction="#handleAddUser" prefWidth="100"/>
        <Button text="Update User" fx:id="btnUpdate" onAction="#handleUpdateUser" prefWidth="100"/>
        <Button text="Delete User" fx:id="btnDelete" onAction="#handleDeleteUser" prefWidth="100"/>
        <Button text="Refresh" fx:id="btnRefresh" onAction="#handleRefresh" prefWidth="100"/>
    </HBox>

    <!-- User Form -->
    <VBox alignment="CENTER" spacing="10">
        <TextField fx:id="txtFirstName" promptText="Enter First Name" prefWidth="300"/>
        <TextField fx:id="txtLastName" promptText="Enter Last Name" prefWidth="300"/>
        <TextField fx:id="txtEmail" promptText="Enter Email" prefWidth="300"/>
        <TextField fx:id="txtType" promptText="Enter User Type" prefWidth="300"/>
    </VBox>

    <!-- Save and Cancel Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Save" fx:id="btnSave" onAction="#handleSaveUser" prefWidth="100"/>
        <Button text="Cancel" fx:id="btnCancel" onAction="#handleCancel" prefWidth="100"/>
    </HBox>
</VBox>






