<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="270.0" prefWidth="716.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.main.EvenementController">
    
    <TableView fx:id="Table" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="400.0">
        <columns>
            <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
            <TableColumn fx:id="colName" prefWidth="150.0" text="Event Name" />
            <TableColumn fx:id="Date" prefWidth="100.0" text="Date" />
            <TableColumn fx:id="colDesc" prefWidth="150.0" text="Description" />
            <TableColumn fx:id="User" prefWidth="100.0" text="User" />
        </columns>
    </TableView>

    <TextField fx:id="EventName" layoutX="441.0" layoutY="14.0" promptText="Event Name" />

    <DatePicker fx:id="DateIn" layoutX="441.0" layoutY="50.0" />

    <TextArea fx:id="DEscIn" layoutX="441.0" layoutY="85.0" prefHeight="100.0" prefWidth="200.0" promptText="Event Description" />

    <MenuButton fx:id="UserName" layoutX="612.0" layoutY="14.0" text="Select User">
      
    </MenuButton>

    <Button fx:id="btnSave" layoutX="441.0" layoutY="201.0" onAction="#handleSave" text="Save" />

    <Button fx:id="btnUpdate" layoutX="513.0" layoutY="201.0" onAction="#handleUpdate" text="Update" />

    <Button fx:id="btnDelete" layoutX="612.0" layoutY="201.0" onAction="#handleDelete" text="Delete" />
   <Button fx:id="btnBack" layoutX="14.0" layoutY="226.0" onAction="#Back" text="Back" />
</AnchorPane>
