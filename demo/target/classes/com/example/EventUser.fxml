<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" style="-fx-background-color: #aDD8E6;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.main.EventUserController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Event Management System" textFill="#3e4fe5" />

    <TableView id="table" fx:id="evenementTable" prefHeight="400" prefWidth="600" style="-fx-background-color: #f0fffb;" stylesheets="@style.css">
        <columns>
            <TableColumn fx:id="colEventName" prefWidth="200" text="Event Name" />
            <TableColumn fx:id="colEventDate" prefWidth="150" text="Event Date" />
            <TableColumn fx:id="colEventDescription" prefWidth="250" text="Description" />
        </columns>
    </TableView>

    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnBack" onAction="#handleBack" prefWidth="100" style="-fx-background-color: #ffffff;" text="Back to Main" />
    </HBox>
</VBox>