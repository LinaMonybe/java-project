<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Pos?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.main.UserController" spacing="10" alignment="CENTER">
    <Label text="Manage Users" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    
    <TextField fx:id="firstNameField" promptText="First Name" />
    <TextField fx:id="lastNameField" promptText="Last Name" />
    <TextField fx:id="emailField" promptText="Email" />
    <TextField fx:id="typeField" promptText="Type (Student/Professor)" />
    
    <Button text="Add User" onAction="#handleAddUser" />
    <Button text="Update User" onAction="#handleUpdateUser" />
    <Button text="Delete User" onAction="#handleDeleteUser" />
    <Button text="Back" onAction="#handleBackToMain" />
    
    <ListView fx:id="userListView" prefHeight="200" />
</VBox>
