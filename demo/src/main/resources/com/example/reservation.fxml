<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.ReservationController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Title -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Reservation Management" textFill="#3e4fe5" />

    <!-- TableView -->
    <TableView fx:id="reservationTable" prefHeight="400" prefWidth="800">
        <columns>
            <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
            <TableColumn fx:id="colUserId" prefWidth="100.0" text="User ID" />
            <TableColumn fx:id="colEventId" prefWidth="100.0" text="Event ID" />
            <TableColumn fx:id="colRoomId" prefWidth="100.0" text="Room ID" />
            <TableColumn fx:id="colFieldId" prefWidth="100.0" text="Field ID" />
            <TableColumn fx:id="colReservationDate" prefWidth="200.0" text="Reservation Date" />
        </columns>
    </TableView>

    <!-- Input Fields -->
    <VBox alignment="CENTER" spacing="10">
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="txtUserId" promptText="Enter User ID" prefWidth="150" />
            <TextField fx:id="txtEventId" promptText="Enter Event ID" prefWidth="150" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="txtRoomId" promptText="Enter Room ID" prefWidth="150" />
            <TextField fx:id="txtFieldId" promptText="Enter Field ID" prefWidth="150" />
        </HBox>
       <DatePicker fx:id="txtReservationDate" promptText="Select Reservation Date" prefWidth="300" />
    </VBox>

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="btnSave" onAction="#handleSaveReservation" text="Add" prefWidth="100" style="-fx-background-color: #ffffff;" />
        <Button fx:id="btnUpdate" onAction="#handleUpdateReservation" text="Update" prefWidth="100" style="-fx-background-color: #ffffff;" />
        <Button fx:id="btnDelete" onAction="#handleDeleteReservation" text="Delete" prefWidth="100" style="-fx-background-color: #ffffff;" />
        <Button fx:id="btnRefresh" onAction="#handleRefresh" text="Refresh" prefWidth="100" style="-fx-background-color: #ffffff;" />
    </HBox>

    <!-- Back Button -->
    <Button fx:id="btnCancel" onAction="#handleBack" text="Back to Main" style="-fx-background-color: #ffffff;" />
</VBox>
